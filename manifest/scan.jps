type: update
name: Anti-virus
baseUrl: https://raw.githubusercontent.com/panslothda/Jelastic_Addon_AV-Scanner/master/
version: 0.1
logo: images/clamav-logo.png

onInstall:
- cmd [${settings.node}]:
    sudo freshclam
    sudo clamscan --infected --recursive --remove --exclude-dir="^/sys" --exclude-dir="^/dev" --exclude-dir="^/proc" -l /var/log/clamav.log /
  user: root
  sayYes: true

- return:
      type: success
      message: ${response.out}