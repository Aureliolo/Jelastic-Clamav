type: update
name: Anti-virus
baseUrl: https://raw.githubusercontent.com/panslothda/Jelastic_Addon_AV-Scanner/master/
version: 0.1
logo: images/clamav-logo.png

onInstall:
- cmd [${settings.node}]:
    clamscan --infected --recursive --remove --exclude-dir="^/sys" --exclude-dir="^/dev" --exclude-dir="^/proc" /
  user: root
  sayYes: true

- return:
      type: success
      message: Sucesfully scanned - ${response.out}
      email: Sucesfully scanned and if found removed\ - ${response.out}